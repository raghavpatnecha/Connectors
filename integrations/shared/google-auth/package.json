{
  "name": "@connectors/google-auth",
  "version": "1.0.0",
  "description": "Shared Google OAuth authentication for all Google Workspace MCP servers",
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "google",
    "oauth",
    "google-workspace",
    "mcp",
    "authentication",
    "vault"
  ],
  "dependencies": {
    "googleapis": "^128.0.0",
    "google-auth-library": "^9.0.0",
    "node-vault": "^0.10.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0"
  },
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./index.d.ts"
    },
    "./oauth-manager": {
      "import": "./oauth-manager.js",
      "types": "./oauth-manager.d.ts"
    },
    "./vault-client": {
      "import": "./vault-client.js",
      "types": "./vault-client.d.ts"
    },
    "./google-client-factory": {
      "import": "./google-client-factory.js",
      "types": "./google-client-factory.d.ts"
    },
    "./oauth-config": {
      "import": "./oauth-config.js",
      "types": "./oauth-config.d.ts"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT"
}
