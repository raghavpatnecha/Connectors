    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.ts'",
    "test:auth": "jest --testMatch='**/tests/auth/**/*.test.ts'",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "twitter",
    "x",
    "mcp",
    "oauth",
    "oauth1.0a",
    "social-media",
