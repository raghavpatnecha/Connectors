# Twitter OAuth 1.0a Credentials (Primary Authentication)
# Get from: https://developer.twitter.com/en/portal/dashboard
X_API_KEY=your_consumer_api_key
X_API_SECRET=your_consumer_api_secret
X_ACCESS_TOKEN=your_access_token
X_ACCESS_TOKEN_SECRET=your_access_token_secret

# SocialData API (Optional - for enhanced analytics)
# Get from: https://socialdata.tools
SOCIALDATA_API_KEY=your_socialdata_api_key

# Session Cookies (Fallback - use if OAuth not available)
# Extract from browser: auth_token, ct0, twid
SESSION_AUTH_TOKEN=
SESSION_CT0=
SESSION_TWID=

# HashiCorp Vault Configuration
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-root-token

# Server Configuration
PORT=3150
NODE_ENV=development

# Rate Limiting (Twitter API limits)
# Free tier: 50 tweets/day, 500 reads/month
# Basic ($100/mo): 3,000 tweets/month, 10,000 reads/month
# Pro ($5,000/mo): 300,000 tweets/month, 1M reads/month
TWITTER_RATE_LIMIT_PER_MINUTE=15
TWITTER_RATE_LIMIT_PER_DAY=50
TWITTER_RATE_LIMIT_PER_MONTH=500

# Cookie Encryption
COOKIE_ENCRYPTION_KEY=your-32-character-encryption-key

# Logging
LOG_LEVEL=info
